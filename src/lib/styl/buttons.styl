
button
  color: $color
  border: none
  background-color: transparent
  .svg-icon
    fill: $color
  &:hover
      color $color2
    .svg-icon
      fill $color2
      
button.btn  
   background-color: $white
   padding .25em .5em
   border-radius: .1em
   box-shadow: 1px 1px 1px rgba(0,0,0,.5)
   margin-left: .25em

button.menu
  width: 2.5em
  height: 2.5em
  padding: 0
  .svg-icon
    width: 2em
    height: 2em
button.circle
  border-radius: 50%
  border:$border
  .svg-icon
    width: 1.5em
    height: 1.5em

button.reset 
  font-size: 1.5em
  line-height: 1em
  height: 1.25em
  width: 1.25em
  padding:0.0625em
  border-radius: 50%
  float:right
  background-color: white
  border: $color solid 1px

.btn.badge, .w-badge
  position: relative
  margin-right: .75em
  display: inline-block
  .badge
    position: absolute
    bottom: -1em
    right: -1em
    border-radius: 50%
    padding: .125em
    line-height: 1.5em
    font-size: .7em
    background-color: $color
    color: $white
    width: 1.5em
    height: 1.5em
    display: inline-block

button.close svg
  display: inline-block
  min-height: $action-btn-size
