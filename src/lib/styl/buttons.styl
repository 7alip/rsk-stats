
button
  color: $color
  font-size: 0.9em
  border: none
  background-color: transparent

button.btn  
   background-color: $white
   padding .25em .5em
   border-radius: .1em
   box-shadow: 1px 1px 1px rgba(0,0,0,.5)
   margin-left: .25em

button.menu
  width: 1.5em
  height: 1.5em
  padding: 0
  font-size 1.5em
  font-weight: bold  

button.circle
  width: 4em
  height: 4em
  font-weight: bold
  border-radius: 50%
  border:$border  
    span
      font-size: 5m !important

button.reset 
  font-size: 1.5em
  line-height: 1em
  height: 1.25em
  width: 1.25em
  padding:0.0625em
  border-radius: 50%
  float:right
  background-color: white
  border: $color solid 1px

.btn.badge, .w-badge
  position: relative
  margin-right: .75em
  display: inline-block
  .badge
    position: absolute
    bottom: -1em
    right: -1em
    border-radius: 50%
    padding: .125em
    line-height: 1.5em
    font-size: .8em
    background-color: $color
    color: $white
    width: 1.5em
    height: 1.5em
    display: inline-block

button.close
  display: inline-block
  min-height: $action-btn-size
  &:after
    content: $sym-close
    font-size: $action-btn-size
    color: $color
    font-family: sans-serif
    text-shadow: $txt-sh
  &:hover
    &:after
      color: $dark

$btn-size = 1.5em

button.icon
  background-color: white
  border-style: none
  color: black
  font-size: 1em
  text-shadow: $txt-sh
  height: $btn-size
  width: $btn-size
  line-height: 1.25em
  border-radius: 50%
  padding:0
  margin:0
  box-shadow: none

button.icon:hover
  background-color: $color2

.mini
  font-size: 0.75em