@import './vars.styl'


  table
    border:none
    padding:0
    margin:0
    border-spacing: 0
    th
      padding: .5em 1em 
      .entity-icon
        .icon 
          font-size: 1.5em
        .badge
          font-size: .5em
          bottom: 0
          right: -1.5em
          font-size: .6em
    td
     font-size: 0.8em
     padding: .25em 1em
     white-space: nowrap

$head-bg = $white
$row-odd-bg = $darkness
$row-even-bg = lightness($row-odd-bg, 15%)
$border-color = alpha($color,.2)

  table.dark
    color: $color
    tr
      border: $color solid 1px
    th
      border-bottom: $border-color dashed 1px
      background-color $head-bg
    tr.odd td
      background-color $row-odd-bg
    tr.even td   
      background-color $row-even-bg
    tr:last-child td
      border-bottom: solid 1px $border-color
    tr:hover td
      background-color: $darkness2 

