@import 'vars.styl'
.node
  #rsk-logo
    stroke: none
.node 
  stroke: $midlight
  stroke-width: 3px
  transition: fill 0.5s ease
  stroke: none
  fill: $white
  .node-sym
    stroke: none

 .node-back
    stroke: none
    fill: $mid

.node.pinned
  .node-back
    stroke: alpha($warn,.75)
    stroke-width: 2px
    fill: $warn
.link
  stroke: alpha($mid,0.6)

.selection-lines
  stroke: $color
  stroke-width: 1px
  fill: none
   
.node
.link
  stroke-linecap: round
  color: $color
  &:hover
      stroke: $warn
     
      color: $warn
 .link.selected
    stroke: alpha($color2,0.6)

.curve
  fill: none

.node-label
  fill: $midlight
  stroke: rgba(0,0,0,0.7)
  paint-order: stroke

.node-label.inactive
  fill: alpha($graylight,.5)
  
 .node.selected
    stroke: $color2
    color: $color2
    .node-back
      stroke-width: 2px
      fill: $color2
 
.node.inactive
    .node-back
      fill: $gray

.inactive
  color: alpha($graylight,.5)